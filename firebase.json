{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/githubNotification",
        "function": "githubNotification"
      },
      {
        "source": "/trelloNotification",
        "function": "trelloNotification"
      },
      {
        "source": "/registerTrelloBoard",
        "function": "registerTrelloBoard"
      }
    ]
  }
}